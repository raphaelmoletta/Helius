<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6696c8"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="oficina3abpr.helius.TelaDeEconomia">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="340dp"
        android:layout_height="270dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/imagem_grafico" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="29dp"
        android:text="@string/preco_energia"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:background="#fcbce7ff"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/button11"
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginBottom="58dp"
        android:background="@drawable/botao_k"
        android:text="DiÃ¡rio" />

    <Button
        android:id="@+id/button12"
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/button11"
        android:layout_toEndOf="@+id/button11"
        android:layout_toRightOf="@+id/button11"
        android:background="@drawable/botao_k"
        android:text="Semanal" />

    <Button
        android:id="@+id/button13"
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textView7"
        android:layout_toEndOf="@+id/button12"
        android:layout_toRightOf="@+id/button12"
        android:background="@drawable/botao_k"
        android:text="Mensal" />

    <Button
        android:id="@+id/button14"
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/button13"
        android:layout_toEndOf="@+id/button13"
        android:layout_toRightOf="@+id/button13"
        android:background="@drawable/botao_k"
        android:text="Anual" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/escolha_grafico"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
